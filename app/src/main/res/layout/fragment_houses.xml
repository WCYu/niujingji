<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">

    <include layout="@layout/include_header_location_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_houses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_houses_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/selector_arrow"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:singleLine="true"
                android:text="区域"
                android:textColor="@color/selector_white"
                android:textSize="@dimen/text_size_m" />

            <View
                android:layout_width="1px"
                android:layout_height="28px"
                android:background="@color/colorLine" />

            <CheckBox
                android:id="@+id/cb_houses_acreage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/selector_arrow"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:singleLine="true"
                android:text="面积"
                android:textColor="@color/selector_white"
                android:textSize="@dimen/text_size_m" />

            <View
                android:layout_width="1px"
                android:layout_height="28px"
                android:background="@color/colorLine" />

            <CheckBox
                android:id="@+id/cb_houses_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableRight="@drawable/selector_arrow"
                android:gravity="center"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:singleLine="true"
                android:text="价格"
                android:textColor="@color/selector_white"
                android:textSize="@dimen/text_size_m" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_houses_sort"
            android:layout_width="30px"
            android:layout_height="28px"
            android:layout_marginRight="24px"
            android:src="@mipmap/sort_normal" />

    </LinearLayout>

    <com.rxjy.niujingji.widget.xlistview.XListView
        android:id="@+id/lv_houses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></com.rxjy.niujingji.widget.xlistview.XListView>

</LinearLayout>