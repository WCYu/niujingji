<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148px"
        android:background="@color/colorWhite"
        android:paddingBottom="28px"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:paddingTop="28px">

        <ImageView
            android:id="@+id/iv_room"
            android:layout_width="164px"
            android:layout_height="98px"
            android:scaleType="centerCrop"
            android:src="@mipmap/building_icon" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="20px"
            android:layout_height="26px"
            android:layout_marginLeft="10px"
            android:src="@mipmap/sell_small_icon" />

        <TextView
            android:id="@+id/tv_room_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="4px"
            android:layout_toRightOf="@+id/iv_room"
            android:text="¥11"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_room_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_room_price"
            android:layout_toRightOf="@+id/tv_room_price"
            android:text="/㎡/天起"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_room_acreage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_room_price"
            android:layout_alignParentRight="true"
            android:text="300㎡"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_room_type"
            android:layout_width="164px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_room_price"
            android:layout_marginLeft="24px"
            android:layout_marginTop="22px"
            android:layout_toRightOf="@+id/iv_room"
            android:singleLine="true"
            android:text="朝阳"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_room_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_room_type"
            android:layout_alignParentRight="true"
            android:text="1年前"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_s" />

    </RelativeLayout>

</LinearLayout>