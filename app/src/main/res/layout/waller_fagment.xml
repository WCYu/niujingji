<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="406px"
                android:scaleType="centerCrop"
                android:src="@mipmap/more_banner_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="瑞祥服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/red_image"
                                android:layout_width="56px"
                                android:layout_height="56px"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15px"
                                android:layout_marginTop="40px"
                                android:src="@mipmap/more_redenvelopes" />

                            <TextView
                                android:id="@+id/tv_tab_wallet_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="130px"

                                android:layout_marginTop="20px"
                                android:background="@drawable/shape_tip"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/colorWhite"
                                android:textSize="16px"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="红包"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/more_returnguest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"

                            android:text="回头客"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/courtesy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"

                            android:src="@mipmap/more_joinin" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="加盟推荐"
                            android:textSize="25px" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="#f7f5f5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="设计师服务"
                    android:textSize="32px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_dianpu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/dianpu" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="店铺"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_huiyuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/huiyuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="会员"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_kehu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/kehu"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:textSize="25px"
                            android:text="客户"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_zhangben"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/zhangben" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="账本"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_huishou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/huishou" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="会收"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_keshou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/keshou"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:textSize="25px"
                            android:text="客收"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="#f7f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_keyuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/keyuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="客源"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_fangyuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/fangyuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:text="房源"
                            android:textSize="25px" />


                    </LinearLayout>

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="#f7f5f5" />

                    <LinearLayout
                        android:id="@+id/ly_loupan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56px"
                            android:layout_height="56px"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15px"
                            android:layout_marginTop="40px"
                            android:layout_weight="1"
                            android:src="@mipmap/loupan"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40px"
                            android:gravity="center"
                            android:textSize="25px"
                            android:text="楼盘"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="#f7f5f5" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>