<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_list_item_building_type"
        android:layout_width="162px"
        android:layout_height="90px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:background="@drawable/shape_radio_button_normal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_item_building_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部户型"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_list_item_building_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3套"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_s" />

    </LinearLayout>

</LinearLayout>