<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context="com.rxjy.niujingji.activity.RoomDetailActivity">

    <com.rxjy.niujingji.widget.HeadZoomScrollView
        android:id="@+id/hsv_room_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin_room_detail"
        android:background="@color/colorBG">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_room_detail"
                android:layout_width="match_parent"
                android:layout_height="484px"
                android:scaleType="centerCrop"
                android:src="@mipmap/building_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="28px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:paddingTop="28px">

                <ImageView
                    android:id="@+id/iv_room_detail_status"
                    android:layout_width="24px"
                    android:layout_height="30px"
                    android:layout_marginTop="4px" />

                <TextView
                    android:id="@+id/tv_room_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4px"
                    android:layout_marginTop="4px"
                    android:layout_toRightOf="@+id/iv_room_detail_status"
                    android:singleLine="true"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/text_size_l" />

                <TextView
                    android:id="@+id/tv_room_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_room_detail_name"
                    android:layout_marginTop="22px"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_size_l" />

                <TextView
                    android:id="@+id/tv_room_detail_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_room_detail_price"
                    android:layout_toRightOf="@+id/tv_room_detail_price"
                    android:text="元/㎡/天"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_s" />

                <TextView
                    android:id="@+id/tv_room_detail_month_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/iv_room_detail_type_icon"
                    android:layout_below="@+id/tv_room_detail_name"
                    android:layout_marginTop="22px"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_size_l" />

                <TextView
                    android:id="@+id/tv_room_detail_month_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_room_detail_price"
                    android:layout_toRightOf="@+id/tv_room_detail_month_price"
                    android:text="元/㎡/月起"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_s" />

                <ImageView
                    android:id="@+id/iv_room_detail_location_icon"
                    android:layout_width="18px"
                    android:layout_height="24px"
                    android:layout_below="@+id/tv_room_detail_price"
                    android:layout_marginTop="22px"
                    android:src="@mipmap/location_icon" />

                <TextView
                    android:id="@+id/tv_room_detail_location"
                    android:layout_width="164px"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_room_detail_location_icon"
                    android:layout_marginLeft="8px"
                    android:layout_toRightOf="@+id/iv_room_detail_location_icon"
                    android:singleLine="true"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_s" />

                <View
                    android:layout_width="1px"
                    android:layout_height="24px"
                    android:layout_below="@+id/tv_room_detail_price"
                    android:layout_marginTop="22px"
                    android:layout_toRightOf="@+id/tv_room_detail_location"
                    android:background="@color/colorLine" />

                <ImageView
                    android:id="@+id/iv_room_detail_type_icon"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_below="@+id/tv_room_detail_price"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="22px"
                    android:layout_toRightOf="@+id/tv_room_detail_location"
                    android:src="@mipmap/houses_icon" />

                <TextView
                    android:id="@+id/tv_room_detail_type"
                    android:layout_width="164px"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_room_detail_type_icon"
                    android:layout_marginLeft="8px"
                    android:layout_toRightOf="@+id/iv_room_detail_type_icon"
                    android:singleLine="true"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_s" />

                <RelativeLayout
                    android:layout_width="118px"
                    android:layout_height="118px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/iv_room_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="24px"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="24px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房源信息"
                    android:textColor="@color/colorBlackLight"
                    android:textSize="@dimen/text_size_l" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="单价："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="使用面积："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_user_acreage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="类型："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="所在楼层："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_floor_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="总楼层："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_floor_count_sum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="装修程度："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_build_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="朝向："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_face_to"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="位置："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="物业："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_tenement"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="物业费："
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                        <TextView
                            android:id="@+id/tv_room_detail_info_tenement_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/text_size_s" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="24px"
                android:background="@color/colorLine" />

            <include layout="@layout/include_circum" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine" />

            <LinearLayout
                android:id="@+id/lin_room_detail_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看地图"
                    android:textColor="@color/colorOrangeDark"
                    android:textSize="@dimen/text_size_m" />

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="24px"
                    android:layout_marginLeft="4px"
                    android:src="@mipmap/arrow_right_orange_icon" />

            </LinearLayout>

        </LinearLayout>

    </com.rxjy.niujingji.widget.HeadZoomScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_room_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="88px">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_centerVertical="true"
                android:paddingRight="20px"
                android:src="@mipmap/back_icon" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="54px"
                android:layout_height="54px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24px"
                android:paddingLeft="20px"
                android:src="@mipmap/share_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_share"
                android:layout_toRightOf="@+id/iv_back"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="36px" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lin_room_detail"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_room_detail_consult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="咨询"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />

        <Button
            android:id="@+id/btn_room_detail_appointment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="预约看房"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_l" />

    </LinearLayout>

</RelativeLayout>
