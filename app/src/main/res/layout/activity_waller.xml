<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_header_layout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2px">

        <ImageView
            android:id="@+id/img_zonge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/background" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="48px"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="48px"
            android:layout_marginTop="139px"
            android:layout_width="186px"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sum"/>
        <TextView
            android:id="@+id/tv_tixian"
            android:gravity="center_horizontal"
            android:layout_marginLeft="48px"
            android:layout_marginTop="218px"
            android:layout_width="186px"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:text="提现 > >"
            android:textColor="#FFFFFF"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="186px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48px"
            android:layout_marginTop="77px"
            android:text="账户（元）"
            android:textColor="#FFFFFF"
            android:textSize="30px" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="18px"
        android:background="#E5E5E5"/>
    <TextView
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="24px"
        android:text="资金变动"
        android:textSize="36px" />
    <View
        android:layout_width="match_parent"
        android:layout_height="18px"
        android:background="#E5E5E5"/>
    <ListView
        android:layout_marginLeft="24px"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/lv_qianbao">
    </ListView>
</LinearLayout>