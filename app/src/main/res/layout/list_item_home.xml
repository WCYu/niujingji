<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_list_item_home"
                android:layout_width="10px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_list_item_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/v_list_item_home"
                android:text="王小二"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_l" />

            <ImageView
                android:id="@+id/iv_list_item_home_call"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/tv_list_item_home_name"
                android:src="@drawable/selector_call" />

            <TextView
                android:id="@+id/tv_list_item_home_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2017-01-11 13:00"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <ImageView
                android:layout_width="22px"
                android:layout_height="22px"
                android:layout_centerVertical="true"
                android:layout_marginRight="4px"
                android:layout_toLeftOf="@id/tv_list_item_home_time"
                android:src="@mipmap/time_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tv_list_item_home_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/serial_number"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_home_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_list_item_home_serial_number"
                android:text="12-456511"
                android:textColor="@color/colorGrayDark"
                android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/tv_list_item_home_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="4px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="4px"
                android:text="已签"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/text_size_s" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>